@{
    ViewBag.Title = "主页";
}

<link href="~/easyui/themes/metro-blue/easyui.css" rel="stylesheet" />
<link href="~/easyui/themes/icon.css" rel="stylesheet" />
<style>
    .lContent {
        height: 25px;
        width: 100%;
        text-align: center;
        line-height: 25px;
        width: 800px;
        margin: 0 auto;
        /*border: 1px solid;*/
    }

    .lText {
        height: 25px;
        font-size: 22px;
        text-align: right;
    }

    .lBtn {
        font-size: 22px;
        height: 30px;
        width: 80px;
    }

    table tr td {
        text-align: center;
    }
</style>
<script src="~/Scripts/jquery-2.0.3.min.js"></script>
<script src="~/easyui/jquery.easyui.js"></script>
<script src="~/Scripts/common/snsglobal.js"></script>
<script>
    $().ready(function () {
        $('#btn_clear').on('click', function () {
            $('#loginff').form('clear');
        });
    });
</script>
@if (ViewBag.LoginMsg != null)
{
    <script>
        $.messager.alert('提示', '用户名或密码错误，请重试', 'error');
    </script> 
}
<div class="easyui-layout" data-options="fit:true">
     <div data-options="region:'south',split:true" style="height: 50px;">
        <div style="margin-top: 5px; text-align: center">
            <span style="color: gray" > 快拼车系统后台<br />
                建议使用Chrome或者FireFox浏览器浏览<br />
               
            </span>
        </div>
    </div>
    <div data-options="region:'north'" style="height: 50px"></div>
    <div data-options="region:'south',split:true" style="height: 50px;"></div>
    <div data-options="region:'center',title:'微信快拼车后台系统',iconCls:'icon-ok'">
        <div class="sns-info">
            <div class="sns-tip icon-tip"></div>
            <div>登录</div>
        </div>
        <div style="margin: 50px 0;"></div>
        <div id="login" class="lContent lText">
            <form id="loginff" method="post" action="@Url.Action("Login", "Home")">
                <table style="margin: auto">
                    <tr>
                        <td>
                            <label for="ip_username">用户名</label>
                        </td>
                        <td>
                            <input type="text" class="lText easyui-tooltip" id="ip_username" name="username" required="required" title="输入用户名" /></td>
                    </tr>
                    <tr>
                        <td>
                            <label for="ip_password">密码</label></td>
                        <td>
                            <input type="password" class="lText easyui-tooltip" id="ip_password" name="password" required="required" title="输入密码" /></td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input id="btn_login" type="submit" class="lBtn" value="登录" />
                            <input id="btn_clear" type="button" class="lBtn" value="清空" /></td>
                    </tr>
                </table>
            </form>

        </div>
    </div>
</div>


