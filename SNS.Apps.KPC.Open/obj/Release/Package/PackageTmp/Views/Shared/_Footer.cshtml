<script>
    var KPC = KPC || {};
    KPC.time = 0;
    KPC.seed = 0;

    function tick() {
        KPC.time = KPC.time - 1;
        var min = Math.floor(KPC.time / 60);
        var second = KPC.time - min * 60;
        document.getElementById("clocktimes").innerText = second + "秒";
    }

    function showWait() {
        document.getElementById("clocktimes").innerText = "";
        if (navigator.userAgent.toLowerCase().indexOf("android") > 0) {
            KPC.time = 10;
        } else {
            KPC.time = 10;
        }
        KPC.seed = 0;
        KPC.seed = window.setInterval(tick, 1000);
        document.getElementById("running").style.visibility = "visible";
        window.setTimeout(hideWait, 10000);
        window.onunload = hideWait;

    }

    function hideWait() {
        window.clearInterval(KPC.seed);
        document.getElementById("running").style.visibility = "hidden";
    }

