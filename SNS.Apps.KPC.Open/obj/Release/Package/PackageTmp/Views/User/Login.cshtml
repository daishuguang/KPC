@model SNS.Apps.KPC.Libs.Models.UserSignInModel

@{
    ViewBag.Title = "快拼车";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

@section head{
    @Styles.Render("~/Content/route/regandedit")
    <style>
        #wrapper ul li {
            border: none;
        }

        #wrapper input[type="text"], #wrapper input[type="password"] {
            /*
            display: flex;
            line-height: 25px;
            -webkit-box-flex: 1;
            -moz-box-flex: 1;
            -ms-flex: 1;
            flex: 1;
            */
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            width: 100%;
            padding: 9px;
            -webkit-appearance: none;
        }

        input[type="button"] {
            width: 100%;
            color: white;
            height: 50px;
        }

            input[type="button"], input[type="button"]:visited {
                background-color: #2f8d13;
                border: 1px solid #008001;
                box-shadow: rgba(255, 255, 255, 0.298039) 0px 1px 0px 0px inset, rgb(204, 204, 204) 1px 1px 4px 0px;
                /*
                background: -webkit-gradient(linear, 0% 0, 0% 100%, from(#0faf0f), to(#008001));
                    */
            }

                input[type="button"]:active {
                    /*
                    background: -webkit-gradient(linear, 0% 0, 0% 100%, from(#005801), to(#008001));
                        */
                }
    </style>
}

<div id="wrapper">

    <div class="header">
        <span id="backbtn" class="backbtn">
            <!--<img src="/content/images/back.png" width="25" height="25" style="vertical-align:middle;" />-->
        </span>
        <div class="headertitle">用户登录</div>
    </div><!-- navbar -->
    @using (Html.BeginForm("Login", "User", new { ReturnUrl = @ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <ul>
            <li style="font-size:12px;color:gray;margin:5px 0px;">手机号直接登录</li>
            <li style="margin: 5px 0px;">
                @Html.TextBoxFor(m => m.Mobile, new { id = "txt_mobile", @class = "inputwidth", maxlength = "11", placeholder = "请输入手机号（必填）" })
            </li>
            <li style="margin: 5px 0px;">
                @Html.PasswordFor(m => m.Password, new { id = "txt_password", @class = "inputwidth", placeholder = "请输入密码（必填）" })
            </li>
			<li>
				@Html.TextBoxFor(m => m.ValidationCode, new { id = "txt_validationcode", @class = "inputwidth", placeholder = "请输入验证码（必填）", maxlength = 4, required = "required", style = "width:52%;" })
				@Html.Partial("_Partial_ValidationCode")
			</li>
            <li style="margin: 10px 0px;">
                <input type="button" id="btn_submit" style="font-size:20px;border-radius:3px;" name="Submit" value="登录" />
            </li>
            <li style=" margin: 5px 0px;height:35px;line-height:35px;text-align:right;">
                <a href="/user/reset?returnurl=@ViewBag.ReturnUrl" onclick="showWait();" style="color:gray;padding:0px 10px;">重置密码</a><span style="color:rgb(51,51,51);">|</span><a onclick="showWait();" href="/user/register?returnurl=@ViewBag.ReturnUrl" style="color:gray;padding:0px 10px;">去注册</a>
            </li>
        </ul>
    }
</div>

@RenderPage("/Views/Shared/_Footer.cshtml")

@Scripts.Render("~/bundles/user/login")

@if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
{
    <script type="text/javascript">alert("@ViewBag.ErrorMsg");</script>
}