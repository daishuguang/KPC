@model SNS.Apps.KPC.Libs.Models.UserPromoterRankResult
@using SNS.Apps.KPC.Libs.Models
@using SNS.Apps.KPC.Libs.Configurations
@using SNS.Apps.KPC.Libs.Utils

@{
    ViewBag.Title = "快拼车";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
@section head{
    @Styles.Render("~/Content/route/listview")
}

<div id="wrapper">
            <div class="header">
        <div class="headertitle">推荐排名</div>
    </div>
    <ul style="background-color:#cacaca; text-align:center;display:-webkit-box; height:40px;line-height:40px;">
        <li style="-webkit-box-flex:1;border-right:1px solid white;">昵称</li>
        <li style="-webkit-box-flex:1;border-right:1px solid white;">关注量</li>
        <li style="-webkit-box-flex:1">注册量</li>
    </ul>
    <ul id="searchresult">
        @foreach (var item in Model.Promoters)
        {
            if (item.Subscribed > 0)
            {
                <li>
                    <table style="width:100%;">
                        <tr style="height:30px;text-align:center;">
                            <td width="33%">
                                @(item.NickName.Substring(0, 1) + "***" + item.NickName.Substring(item.NickName.Length - 1, 1))
                            </td>
                            <td>
                                @item.Subscribed
                            </td>
                            <td width="33%">
                                @item.Registerted
                            </td>
                        </tr>
                    </table>
                </li>
            }
        }
    </ul>

    @RenderPage("/Views/Shared/_Footer.cshtml")
</div>
